    public void Iniciar()
    {
        Console.WriteLine("Digite 'sair' para encerrar.\n");

        Console.WriteLine("ğŸ’¬ VocÃª pode perguntar, por exemplo:");
        foreach (var pergunta in perguntasRespostas.Keys)
        {
            Console.WriteLine($"   â¤ {pergunta}");
        }

        while (true)
        {
            Console.Write("\nğŸ§‘â€ğŸ’¬ VocÃª: ");
            string entrada = Console.ReadLine()?.ToLower();

            if (entrada == "sair")
            {
                Console.WriteLine("ğŸ‘‹ Obrigado por visitar nossa loja!!");
                break;
            }

            bool respondeu = false;

            foreach (var pergunta in perguntasRespostas)
            {
                if (entrada.Contains(pergunta.Key))
