                    Console.WriteLine("ğŸ¤– Bot: " + pergunta.Value);
                    respondeu = true;
                    break;
                }
            }

            if (!respondeu)
            {
                var random = new Random();
                int index = random.Next(respostasGenericas.Count);
                Console.WriteLine("ğŸ¤– Bot: " + respostasGenericas[index]);
